{
  "compileOnSave": false,

  "compilerOptions": {
    // "baseUrl": "./",

    // 添加路径相关

    "baseUrl": "src",

    "paths": {
      "@app/*": ["app/*"]

    },

    "outDir": "./dist/out-tsc",

    "sourceMap": true,

    "declaration": false,

    "downlevelIteration": true,

    "experimentalDecorators": true,

    "module": "esnext",

    "moduleResolution": "node",

    "importHelpers": true,

    "target": "es2015",

    "lib": [

      "es2018",

      "dom"

    ]

  },

  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,

    "strictInjectionParameters": true

  }

}